#include <iostream>
using namespace std;

pair<int, int> divmod(int a, int b) {
    int quotient = a / b;
    int remainder = a % b;
    return {quotient, remainder};
}

int main() {
    int a, b;
    cout << "Enter two numbers (a b): ";
    cin >> a >> b;

    if (b == 0) {
        cout << "Error: Division by zero not allowed!" << endl;
        return 0;
    }

    cout << "a / b = " << a / b << endl; 
    cout << "a % b = " << a % b << endl;  

    auto result = divmod(a, b);
    cout << "\nUsing divmod function:" << endl;
    cout << "Quotient = " << result.first << endl;
    cout << "Remainder = " << result.second << endl;

    return 0;
}
